<% include ../partials/header %>
<div class="row justify-content-center">
    <h1>Edit Your Comment for <%=campground.name%></h1>
</div>
<div class="row justify-content-center">
    <div class="col-md-8 col-sm-11">
        <div class="row justify-content-center">
            <div class="col">
                <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="text" name="comment[text]" value="<%=comment.text%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer-fixed %>